@model Capstone.Models.DonationBasket

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Item Name
        </th>
        <th>
            Size
        </th>
        <th>
            Brand
        </th>
        <th>
            Color
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.BasketItems) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ItemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ItemSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.ItemQuantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BasketItemId }) |
            @Html.ActionLink("Details", "Details", new { id = item.BasketItemId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BasketItemId })
        </td>
    </tr>
}

</table>
