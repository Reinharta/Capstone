@model Capstone.Models.RegisterOrganizationViewModel
@{
    ViewBag.Title = "RegisterOrganization";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nonprofit Organization Registration</h2>
<hr />

@using (Html.BeginForm("RegisterOrganization", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h5>Enter your Organization information below to apply for an account.</h5>
    <br/>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    @*<div class="form-group">
        @Html.LabelFor(m => m.UserRole, new { @class = "col-md-2 control-label"})
        <div class="col-md-10">
            @Html.RadioButtonFor(m => m.UserRole, "Organization", new { @class = "radio-inline"})@Html.Label("Nonprofit Organization")
        </div>
    </div>*@
    <div class="well well-sm col-md-8 text-center">
            <h5>To have your account approved, please follow the instructions provided after submitting this form.</h5>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

